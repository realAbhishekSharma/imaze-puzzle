<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Activity.ThreePuzzleGame">


    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@drawable/gradient_ribbon"
        app:layout_constraintTop_toTopOf="@id/topLayoutContainer"
        app:layout_constraintEnd_toStartOf="@id/topLayoutContainer"
        app:layout_constraintBottom_toBottomOf="@id/topLayoutContainer"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:rotation="180"
        android:background="@drawable/gradient_ribbon"
        app:layout_constraintTop_toTopOf="@id/topLayoutContainer"
        app:layout_constraintStart_toEndOf="@id/topLayoutContainer"
        app:layout_constraintBottom_toBottomOf="@id/topLayoutContainer"/>

    <LinearLayout
        android:id="@+id/topLayoutContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/board_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/originalImageShow"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:background="@color/skyCyan"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/timer_level_box"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="Timer"
                        android:fontFamily="@font/boffossi"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/round_with_border"
                        android:backgroundTint="@color/darkCyan"/>

                    <TextView
                        android:id="@+id/timer"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="888"
                        android:textSize="15dp"
                        android:fontFamily="@font/boffossi"
                        android:shadowColor="@color/darkCyan"
                        android:shadowDy="1"
                        android:shadowDx="1"
                        android:shadowRadius="2"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="@color/darkCyan"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/timer_level_box"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="Level"
                        android:fontFamily="@font/boffossi"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/round_with_border"
                        android:backgroundTint="@color/darkCyan"/>

                    <TextView
                        android:id="@+id/levelViewThree"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="88"
                        android:textSize="15dp"
                        android:fontFamily="@font/boffossi"
                        android:shadowColor="@color/darkCyan"
                        android:shadowDy="1"
                        android:shadowDx="1"
                        android:shadowRadius="2"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:backgroundTint="@color/darkCyan"/>
                </LinearLayout>



            </LinearLayout>



            <ProgressBar
                android:id="@+id/timerProgressBar"
                android:layout_width="match_parent"
                android:progressTint="@color/deepCyan"
                android:progressBackgroundTint="@color/deepCyan"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progress="0"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>


        </LinearLayout>

    </LinearLayout>


    <include
        android:id="@+id/keyLayoutThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        layout="@layout/controller_keyboard"
        app:layout_constraintTop_toBottomOf="@id/boardLayoutThree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boardLayoutThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/board_layout"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayoutContainer"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            style="@style/puzzleBox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/oneTwo"/>



        <ImageView
            android:id="@+id/emptyBox"
            style="@style/puzzleBox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/oneOne"
            style="@style/puzzleBox"
            android:text="1"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/emptyBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/oneTwo"/>

        <ImageView
            android:id="@+id/oneTwo"
            style="@style/puzzleBox"
            android:text="2"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/emptyBox"
            app:layout_constraintStart_toEndOf="@id/oneOne"
            app:layout_constraintEnd_toStartOf="@id/oneThree"/>

        <ImageView
            android:id="@+id/oneThree"
            style="@style/puzzleBox"
            android:text="3"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/emptyBox"
            app:layout_constraintStart_toEndOf="@id/oneTwo"/>

        <ImageView
            android:id="@+id/twoOne"
            style="@style/puzzleBox"
            android:text="4"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/oneOne"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/oneTwo"/>

        <ImageView
            android:id="@+id/twoTwo"
            style="@style/puzzleBox"
            android:text="5"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/oneOne"
            app:layout_constraintStart_toEndOf="@id/oneOne"
            app:layout_constraintEnd_toStartOf="@id/oneThree"/>

        <ImageView
            android:id="@+id/twoThree"
            style="@style/puzzleBox"
            android:text="6"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/oneOne"
            app:layout_constraintStart_toEndOf="@id/oneTwo"/>

        <ImageView
            android:id="@+id/threeOne"
            style="@style/puzzleBox"
            android:text="7"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/twoOne"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/oneTwo"/>

        <ImageView
            android:id="@+id/threeTwo"
            style="@style/puzzleBox"
            android:text="8"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/twoOne"
            app:layout_constraintStart_toEndOf="@id/oneOne"
            app:layout_constraintEnd_toStartOf="@id/oneThree"/>

        <ImageView
            android:id="@+id/threeThree"
            style="@style/puzzleBox"
            android:text="9"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/twoOne"
            app:layout_constraintStart_toEndOf="@id/oneTwo"/>



    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9842627619235895/8477132499"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    </com.google.android.gms.ads.AdView>


</androidx.constraintlayout.widget.ConstraintLayout>