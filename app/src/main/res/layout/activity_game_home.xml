<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.GameHome">


    <TextView
        android:id="@+id/mainBackgroundHome"
        android:layout_width="1530dp"
        android:layout_height="1200dp"
        android:background="@drawable/hill_background"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/snowAnimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/snow_animation"
        android:scaleX="2.5"
        android:scaleY="2.5"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/top_gradient"
        app:layout_constraintTop_toTopOf="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/coinHolderTriangle"
            android:layout_width="18dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box_holder"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/topCoinViewHome"
            app:layout_constraintEnd_toEndOf="@id/topCoinViewHome"/>

        <TextView
            android:id="@+id/topCoinViewHome"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/top_coin_box"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/coinHolderTriangle"/>

        <TextView
            android:id="@+id/topCoinTextHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:maxLength="13"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="25dp"
            android:textSize="20dp"
            android:textColor="@color/darkBlue"
            android:fontFamily="@font/jolly_lodger_regular"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/topCoinViewHome"
            app:layout_constraintBottom_toBottomOf="@id/topCoinViewHome"
            app:layout_constraintTop_toTopOf="@id/topCoinViewHome"
            app:layout_constraintEnd_toEndOf="@id/topCoinViewHome"/>


        <TextView
            android:id="@+id/settingHolderTriangle"
            android:layout_width="18dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box_holder"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/topSettingViewHome"
            app:layout_constraintEnd_toEndOf="@id/topSettingViewHome"/>

        <TextView
            android:id="@+id/topSettingViewHome"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/settings"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/coinHolderTriangle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/lifeFloatingButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="5dp"
        android:text="5"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/agency"
        android:background="@drawable/heart_icon"
        app:layout_constraintTop_toBottomOf="@id/topContainer"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/missionFloatingButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/mission_icon"
        app:layout_constraintTop_toBottomOf="@id/topContainer"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/missionNotificationGameHome"
        style="@style/notificationBall"
        android:translationX="5dp"
        app:layout_constraintStart_toStartOf="@id/missionFloatingButton"
        app:layout_constraintBottom_toBottomOf="@id/missionFloatingButton"/>

    <TextView
        android:id="@+id/lifeNotificationGameHome"
        style="@style/notificationBall"
        android:translationX="-5dp"
        app:layout_constraintEnd_toEndOf="@id/lifeFloatingButton"
        app:layout_constraintBottom_toBottomOf="@id/lifeFloatingButton"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainFrameLayout"
        android:layout_width="300dp"
        android:layout_height="370dp"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/missionFloatingButton"
        app:layout_constraintBottom_toTopOf="@id/startButtonHome">

        <ImageView
            android:id="@+id/mainFrameImageViewHome"
            android:layout_width="260dp"
            android:layout_height="260dp"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/SizeSelectionSliderHome"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintVertical_bias="0.33"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        </androidx.viewpager2.widget.ViewPager2>

        <TextView
            android:layout_width="300dp"
            android:layout_height="370dp"
            android:background="@drawable/main_frame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <TextView
        android:id="@+id/startButtonHome"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:text="Start"
        android:fontFamily="@font/jolly_lodger_regular"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:textColor="@color/darkBlue"
        android:background="@drawable/start_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/levelSelectViewGameHome"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/levelMoveToStartButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/round_button"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/startButtonHome"
        app:layout_constraintBottom_toBottomOf="@id/startButtonHome">

        <TextView
            android:layout_width="12dp"
            android:layout_height="25dp"
            android:rotation="180"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_constraintHorizontal_bias="0.43"
            app:layout_constraintVertical_bias="0.48"
            android:background="@drawable/arrow"
            android:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/levelSelectViewGameHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="130dp"
        android:paddingEnd="130dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.viewpager2.widget.ViewPager2>

    <TextView
        android:id="@+id/darkTransparentScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/transparent80"/>

    <TextView
        android:id="@+id/cloud"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/top_ice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <fragment
        android:id="@+id/fragmentContainerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:name="com.elementstore.imazepuzzle.fragments.SettingsFragment"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/closeDarkTransparentScreen"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:visibility="gone"
        android:text="x."
        android:textSize="30dp"
        android:textColor="@color/darkBlue"
        android:fontFamily="@font/jolly_lodger_regular"
        android:gravity="center"
        android:background="@drawable/round_button"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loadingScreenGameHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/cloudCyan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="60dp"
            android:textColor="@color/darkBlue"
            android:fontFamily="@font/jolly_lodger_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>