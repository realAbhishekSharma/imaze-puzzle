<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Activity.GameHome">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/settingButtonGameHome"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:background="@drawable/round_with_border"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/topLayout"
            app:layout_constraintEnd_toStartOf="@id/missionsGameHome"
            app:layout_constraintTop_toTopOf="@id/topLayout">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:gravity="center"
                android:foreground="@drawable/setting_icon"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/missionsGameHome"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:background="@drawable/round_with_border"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/lifeGameHome"
            app:layout_constraintStart_toEndOf="@id/settingButtonGameHome"
            app:layout_constraintTop_toTopOf="@id/topLayout">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:foreground="@drawable/mission_icon"/>

        </LinearLayout>

        <TextView
            android:id="@+id/missionNotificationGameHome"
            style="@style/notificationBall"
            app:layout_constraintEnd_toEndOf="@id/missionsGameHome"
            app:layout_constraintTop_toTopOf="@id/topLayout"/>

        <LinearLayout
            android:id="@+id/lifeGameHome"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:background="@drawable/round_with_border"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/coinViewContainer"
            app:layout_constraintStart_toEndOf="@id/missionsGameHome"
            app:layout_constraintTop_toTopOf="@id/topLayout">

            <TextView
                android:id="@+id/lifeTextGameHome"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="3"
                android:textSize="11dp"
                android:textColor="@color/white"
                android:fontFamily="@font/boffossi"
                android:background="@drawable/red_heart"/>
        </LinearLayout>

        <TextView
            android:id="@+id/lifeNotificationGameHome"
            style="@style/notificationBall"
            app:layout_constraintEnd_toEndOf="@id/lifeGameHome"
            app:layout_constraintTop_toTopOf="@id/topLayout"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coinViewContainer"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:padding="3dp"
            android:background="@drawable/round_with_border"
            app:layout_constraintEnd_toEndOf="@id/topLayout"
            app:layout_constraintStart_toEndOf="@id/lifeGameHome"
            app:layout_constraintTop_toTopOf="@id/topLayout">


            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/single_coin"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/coinViewGameHome"/>

            <TextView
                android:id="@+id/coinViewGameHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:fontFamily="@font/agency"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:text="..."
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@color/mainCyan"
            app:layout_constraintStart_toStartOf="@id/sizeSelectionLayout"
            app:layout_constraintTop_toTopOf="@id/sizeSelectionLayout"
            app:layout_constraintBottom_toBottomOf="@id/sizeSelectionLayout"
            app:layout_constraintEnd_toEndOf="@id/sizeSelectionLayout"/>

        <LinearLayout
            android:id="@+id/sizeSelectionLayout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/topLayout"
            app:layout_constraintTop_toBottomOf="@id/settingButtonGameHome"
            app:layout_constraintBottom_toBottomOf="@id/topLayout"
            app:layout_constraintEnd_toEndOf="@id/topLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/sizeThreeSelection"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/size_selection_background"/>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="3x3"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/boffossi"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/sizeFourSelection"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/size_selection_background"/>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="4x4"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/boffossi"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/sizeFiveSelection"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/size_selection_background"/>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="5x5"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/boffossi"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/small_round_box"
        android:backgroundTint="@color/mainCyan"
        android:layout_margin="10dp"
        android:paddingBottom="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout">

        <GridView
            android:id="@+id/levelListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="15dp"
            android:verticalSpacing="10dp"
            android:scrollbars="none"
            android:padding="10dp"
            android:gravity="center"
            android:numColumns="auto_fit"
            />
    </LinearLayout>

