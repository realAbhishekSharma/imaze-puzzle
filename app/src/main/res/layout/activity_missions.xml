<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/gradient_background"
    tools:context=".Activity.MissionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/topHeadingTitle"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="3dp"
            android:background="@drawable/round_with_border"
            android:backgroundTint="@color/skyCyan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/boffossi"
                android:textSize="25dp"
                android:text="Missions"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/round_with_border"
                android:backgroundTint="@color/darkCyan"/>
        </LinearLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@color/mainCyan"
            app:layout_constraintStart_toStartOf="@id/sizeSelectionLayout"
            app:layout_constraintTop_toTopOf="@id/sizeSelectionLayout"
            app:layout_constraintBottom_toBottomOf="@id/sizeSelectionLayout"
            app:layout_constraintEnd_toEndOf="@id/sizeSelectionLayout"/>

        <LinearLayout
            android:id="@+id/sizeSelectionLayout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/topLayout"
            app:layout_constraintTop_toBottomOf="@id/topHeadingTitle"
            app:layout_constraintBottom_toBottomOf="@id/topLayout"
            app:layout_constraintEnd_toEndOf="@id/topLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/dailyMissionsSelection"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/size_selection_background"
                    android:backgroundTint="@color/darkCyan"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Daily"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/agency"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/oneTimeMissionsSelection"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/size_selection_background"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="1 Time"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/agency"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/missionRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="130dp"
        app:layout_constraintTop_toBottomOf="@id/topLayout"/>


</androidx.constraintlayout.widget.ConstraintLayout>