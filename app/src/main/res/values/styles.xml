<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="newTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsTranslucent">true</item>
<!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowBackground">@drawable/ic_launcher_background</item>
    </style>

    <style name="puzzleBox">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
<!--        <item name="android:background">@drawable/small_image_box</item>-->
        <item name="android:gravity">center</item>
<!--        <item name="android:background">@color/red</item>-->
<!--        <item name="android:layout_margin">2dp</item>-->
    </style>

    <style name="puzzleBoxFour">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:background">@drawable/small_image_box</item>
        <item name="android:gravity">center</item>
<!--        <item name="android:backgroundTint">@color/red</item>-->
        <item name="android:textColor">@color/black</item>
        <!--        <item name="android:layout_margin">2dp</item>-->
    </style>

    <style name="puzzleBoxFive">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:background">@drawable/small_image_box</item>
        <item name="android:gravity">center</item>
<!--        <item name="android:backgroundTint">@color/red</item>-->
        <item name="android:textColor">@color/green</item>
        <!--        <item name="android:layout_margin">2dp</item>-->
    </style>


    <style name="buttonDesign">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:background">@drawable/small_image_box</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="imageBoxGameHome">
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:foregroundTint">@color/black</item>
    </style>

    <style name="controlButton">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="gridLevelBox">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="notificationBall">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">@drawable/round_with_border</item>
        <item name="android:foregroundTint">@color/red</item>
    </style>


</resources>